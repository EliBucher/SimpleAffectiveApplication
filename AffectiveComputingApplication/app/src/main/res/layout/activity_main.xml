<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Photo"
        android:id="@+id/button"
        android:onClick="DoTakePhoto"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_above="@+id/button" >

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:id="@+id/center"/>

        <RelativeLayout
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/center" android:layout_toStartOf="@+id/center"
            android:layout_alignParentTop="true" android:layout_above="@id/center" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image1"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/center" android:layout_toEndOf="@+id/center"
            android:layout_alignParentTop="true" android:layout_above="@id/center" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image2"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/center" android:layout_toStartOf="@+id/center"
            android:layout_alignParentBottom="true" android:layout_below="@id/center" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image3"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/center" android:layout_toEndOf="@+id/center"
            android:layout_alignParentBottom="true" android:layout_below="@id/center" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image4"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/emotion"/>

    </RelativeLayout>

</RelativeLayout>
